<UserControl x:Class="WhatsAppSimHubPlugin.UI.Tabs.DisplayTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Target Devices -->
            <TextBlock Text="Target Devices"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <!-- Enable VoCores Toggle + Test Button -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <styles:SHToggleCheckbox x:Name="VoCoreEnabledCheckbox"
                        Content="Enable VoCores"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        ToolTip="Enable or disable VoCore displays. Disable if using VR/overlay only."/>
                <styles:SHButtonPrimary x:Name="TestVoCoresButton"
                        Content="ðŸ”§ Test VoCores"
                        Width="120" Height="32"
                        Background="#0E7A0D"
                        Foreground="White"
                        IsEnabled="False"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip="Send a test message to verify VoCores are working"/>
            </StackPanel>

            <!-- VoCore Device 1 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="VoCore Device 1:"
                           Width="130"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#DDDDDD"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="VoCore1ComboBox"
                          Width="250"
                          Height="32"
                          Background="#252526"
                          Foreground="White"
                          BorderBrush="#3E3E42"/>
                <styles:SHButtonPrimary x:Name="RemoveVoCore1Button"
                        Content="ðŸ—‘ï¸ Remove"
                        Width="110" Height="32"
                        Margin="10,0,0,0"
                        Background="#C42B1C"
                        Foreground="White"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip="Remove VoCore 1 selection"/>
            </StackPanel>

            <!-- VoCore Device 2 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="VoCore Device 2:"
                           Width="130"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#DDDDDD"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="VoCore2ComboBox"
                          Width="250"
                          Height="32"
                          Background="#252526"
                          Foreground="White"
                          BorderBrush="#3E3E42"/>
                <styles:SHButtonPrimary x:Name="RemoveVoCore2Button"
                        Content="ðŸ—‘ï¸ Remove"
                        Width="110" Height="32"
                        Margin="10,0,0,0"
                        Background="#C42B1C"
                        Foreground="White"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        ToolTip="Remove VoCore 2 selection"/>
            </StackPanel>

            <!-- Info Box -->
            <Border Background="#1E3A5F" Padding="12" CornerRadius="6" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="â„¹ï¸" FontSize="16" Margin="0,0,10,0" Foreground="White" VerticalAlignment="Top"/>
                        <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap">
                            <Run Text="Select up to 2 VoCore devices to display WhatsApp notifications during races." FontWeight="SemiBold"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="â€¢ The device list updates automatically every 3s"/>
                            <LineBreak/>
                            <Run Text="â€¢ Selected devices show âœ… in the dropdown"/>
                            <LineBreak/>
                            <Run Text="â€¢ Available devices show their name only"/>
                            <LineBreak/>
                            <Run Text="â€¢ Use Test button to verify configuration"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- VR / Overlay Info -->
            <TextBlock Text="VR &amp; Overlay Support"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <Border Background="#2D2D30" Padding="15" CornerRadius="6" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ¥½" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Using in VR or as Screen Overlay"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="A separate overlay dashboard 'Simhub WhatsApp Plugin Overlay' is automatically installed and available for use in VR headsets or as a screen overlay on your monitor."
                               Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="To use it:"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="1. Go to SimHub â†’ Dash Studio â†’ Overlay settings"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="2. Add 'Simhub WhatsApp Plugin Overlay' as an overlay"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="3. Configure position and size as needed"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
