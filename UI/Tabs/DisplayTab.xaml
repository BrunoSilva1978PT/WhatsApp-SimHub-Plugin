<UserControl x:Class="WhatsAppSimHubPlugin.UI.Tabs.DisplayTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Target Devices -->
            <TextBlock Text="Target Devices"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <!-- No Devices Message (shown when no VoCores detected) -->
            <TextBlock x:Name="NoDevicesMessage"
                       Text="No VoCore devices detected"
                       Foreground="#888888"
                       FontSize="14"
                       FontStyle="Italic"
                       Margin="0,0,0,20"
                       Visibility="Collapsed"/>

            <!-- Device Selection Table -->
            <Border x:Name="DeviceTableBorder"
                    Background="#252526"
                    BorderBrush="#3E3E42"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,15"
                    Visibility="Collapsed">
                <StackPanel>
                    <!-- Table Header -->
                    <Border Background="#1E1E1E" CornerRadius="4,4,0,0">
                        <Grid Margin="10,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition x:Name="Column2Header" Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Device"
                                       Grid.Column="0"
                                       Foreground="#AAAAAA"
                                       FontWeight="SemiBold"
                                       FontSize="12"/>
                            <TextBlock Text="#1"
                                       Grid.Column="1"
                                       Foreground="#AAAAAA"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="Column2HeaderText"
                                       Text="#2"
                                       Grid.Column="2"
                                       Foreground="#AAAAAA"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Device Rows Container -->
                    <ItemsControl x:Name="DeviceListContainer">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                                    <Grid Margin="10,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="{Binding Column2Width}"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding DisplayName}"
                                                   Grid.Column="0"
                                                   Foreground="{Binding NameColor}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <RadioButton x:Name="Radio1"
                                                     Grid.Column="1"
                                                     GroupName="VoCore1Group"
                                                     HorizontalAlignment="Center"
                                                     IsChecked="{Binding IsVoCore1, Mode=TwoWay}"
                                                     Tag="{Binding Serial}"
                                                     PreviewMouseLeftButtonDown="Radio1_PreviewMouseDown"/>
                                        <RadioButton x:Name="Radio2"
                                                     Grid.Column="2"
                                                     GroupName="VoCore2Group"
                                                     HorizontalAlignment="Center"
                                                     IsChecked="{Binding IsVoCore2, Mode=TwoWay}"
                                                     Tag="{Binding Serial}"
                                                     Visibility="{Binding Column2Visibility}"
                                                     PreviewMouseLeftButtonDown="Radio2_PreviewMouseDown"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Test Button -->
            <styles:SHButtonPrimary x:Name="TestVoCoresButton"
                    Content="Send Test Message"
                    Width="160" Height="32"
                    HorizontalAlignment="Left"
                    Background="#0E7A0D"
                    Foreground="White"
                    IsEnabled="False"
                    Margin="0,0,0,20"
                    ToolTip="Send a test notification to selected VoCore devices"/>

            <!-- ============================================ -->
            <!-- VoCore #1 Configuration -->
            <!-- ============================================ -->
            <StackPanel x:Name="VoCore1ConfigPanel" Visibility="Collapsed" Margin="0,0,0,20">
                <TextBlock Text="VoCore #1"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#AAAAAA"
                           Margin="0,0,0,10"/>

                <!-- Layer Count Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Layers:"
                               Width="60"
                               FontSize="13"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <RadioButton x:Name="Dash1_Layer1Radio"
                                 Content="1"
                                 GroupName="Dash1Layers"
                                 Foreground="#AAAAAA"
                                 Margin="0,0,20,0"
                                 IsChecked="True"
                                 Checked="Dash1_LayerChanged"/>
                    <RadioButton x:Name="Dash1_Layer2Radio"
                                 Content="2"
                                 GroupName="Dash1Layers"
                                 Foreground="#AAAAAA"
                                 Checked="Dash1_LayerChanged"/>
                </StackPanel>

                <!-- Layer 1 Dropdown (Base dashboard) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Layer 1:"
                               Width="60"
                               FontSize="13"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="Dash1_Layer1ComboBox"
                              Width="280"
                              Height="28"
                              Background="#252526"
                              Foreground="White"
                              BorderBrush="#3E3E42"
                              SelectionChanged="Dash1_Layer1_SelectionChanged"/>
                </StackPanel>

                <!-- Layer 2 Panel (only visible when 2 layers selected) -->
                <StackPanel x:Name="Dash1_Layer2Panel" Visibility="Collapsed">
                    <!-- Layer 2 Dropdown -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Layer 2:"
                                   Width="60"
                                   FontSize="13"
                                   Foreground="#888888"
                                   VerticalAlignment="Center"/>
                        <ComboBox x:Name="Dash1_Layer2ComboBox"
                                  Width="280"
                                  Height="28"
                                  Background="#252526"
                                  Foreground="White"
                                  BorderBrush="#3E3E42"
                                  SelectionChanged="Dash1_Layer2_SelectionChanged"/>
                    </StackPanel>

                    <!-- Apply Button (only for 2 layers - merge) -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <styles:SHButtonPrimary x:Name="VoCore1ApplyButton"
                                Content="Merge Dashboards"
                                Width="140" Height="28"
                                Background="#0E7A0D"
                                Foreground="White"
                                Click="VoCore1Apply_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- ============================================ -->
            <!-- VoCore #2 Configuration -->
            <!-- ============================================ -->
            <StackPanel x:Name="VoCore2ConfigPanel" Visibility="Collapsed" Margin="0,0,0,20">
                <TextBlock Text="VoCore #2"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#AAAAAA"
                           Margin="0,0,0,10"/>

                <!-- Layer Count Selection -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Layers:"
                               Width="60"
                               FontSize="13"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <RadioButton x:Name="Dash2_Layer1Radio"
                                 Content="1"
                                 GroupName="Dash2Layers"
                                 Foreground="#AAAAAA"
                                 Margin="0,0,20,0"
                                 IsChecked="True"
                                 Checked="Dash2_LayerChanged"/>
                    <RadioButton x:Name="Dash2_Layer2Radio"
                                 Content="2"
                                 GroupName="Dash2Layers"
                                 Foreground="#AAAAAA"
                                 Checked="Dash2_LayerChanged"/>
                </StackPanel>

                <!-- Layer 1 Dropdown (Base dashboard) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Layer 1:"
                               Width="60"
                               FontSize="13"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="Dash2_Layer1ComboBox"
                              Width="280"
                              Height="28"
                              Background="#252526"
                              Foreground="White"
                              BorderBrush="#3E3E42"
                              SelectionChanged="Dash2_Layer1_SelectionChanged"/>
                </StackPanel>

                <!-- Layer 2 Panel (only visible when 2 layers selected) -->
                <StackPanel x:Name="Dash2_Layer2Panel" Visibility="Collapsed">
                    <!-- Layer 2 Dropdown -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Layer 2:"
                                   Width="60"
                                   FontSize="13"
                                   Foreground="#888888"
                                   VerticalAlignment="Center"/>
                        <ComboBox x:Name="Dash2_Layer2ComboBox"
                                  Width="280"
                                  Height="28"
                                  Background="#252526"
                                  Foreground="White"
                                  BorderBrush="#3E3E42"
                                  SelectionChanged="Dash2_Layer2_SelectionChanged"/>
                    </StackPanel>

                    <!-- Apply Button (only for 2 layers - merge) -->
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <styles:SHButtonPrimary x:Name="VoCore2ApplyButton"
                                Content="Merge Dashboards"
                                Width="140" Height="28"
                                Background="#0E7A0D"
                                Foreground="White"
                                Click="VoCore2Apply_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Info Box -->
            <Border Background="#1E3A5F" Padding="12" CornerRadius="6" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="i" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Foreground="White" VerticalAlignment="Top"/>
                    <TextBlock Foreground="#CCCCCC" FontSize="12" TextWrapping="Wrap" Width="450">
                        <Run Text="Layer Configuration:" FontWeight="SemiBold" Foreground="White"/>
                        <LineBreak/>
                        <Run Text="1 Layer: Uses the selected dashboard directly"/>
                        <LineBreak/>
                        <Run Text="2 Layers: Merges Layer 1 (base dashboard) with Layer 2 (overlay on top)"/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="Click Merge Dashboards after selecting both layers to create the merged dashboard."/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- VR / Overlay Info -->
            <TextBlock Text="VR and Overlay Support"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <Border Background="#2D2D30" Padding="15" CornerRadius="6" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="VR" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" Foreground="White"/>
                        <TextBlock Text="Using in VR or as Screen Overlay"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="A separate overlay dashboard 'Simhub WhatsApp Plugin Overlay' is automatically installed and available for use in VR headsets or as a screen overlay on your monitor."
                               Foreground="#888888"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="To use it:"
                               Foreground="#AAAAAA"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="1. Go to SimHub - Dash Studio - Overlay settings"
                               Foreground="#888888"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="2. Add 'Simhub WhatsApp Plugin Overlay' as an overlay"
                               Foreground="#888888"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="3. Configure position and size as needed"
                               Foreground="#888888"
                               FontSize="12"
                               Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
