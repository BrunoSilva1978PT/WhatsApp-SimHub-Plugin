<UserControl x:Class="WhatsAppSimHubPlugin.UI.Tabs.DisplayTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Target Device -->
            <TextBlock Text="Target Device"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="VoCore Device:"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <StackPanel Orientation="Horizontal">
                    <styles:SHToggleCheckbox x:Name="VoCoreEnabledCheckbox"
                            Content="Enable VoCore"
                            VerticalAlignment="Center"
                            Margin="0,0,15,0"
                            ToolTip="Enable or disable VoCore display. Disable if using VR/overlay only."/>

                    <ComboBox x:Name="TargetDeviceComboBox"
                              Width="400"
                              Height="36"
                              Background="#252526"
                              Foreground="White"
                              BorderBrush="#3E3E42">
                        <!-- Devices will be loaded dynamically -->
                    </ComboBox>

                    <styles:SHButtonPrimary x:Name="TestOverlayButton" Content="ðŸ§ª Test"
                            Width="80" Height="36"
                            Margin="10,0,0,0"
                            Background="#0E7A0D"
                            Foreground="White"
                            IsEnabled="False"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            ToolTip="Send a test message to verify VoCore is working"/>
                </StackPanel>

                <Border Background="#1E3A5F" Padding="12" CornerRadius="6" Margin="0,15,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="â„¹ï¸" FontSize="16" Margin="0,0,10,0" Foreground="White" VerticalAlignment="Top"/>
                            <TextBlock Foreground="White" FontSize="12" TextWrapping="Wrap">
                                <Run Text="Select a VoCore to display WhatsApp notifications during races." FontWeight="SemiBold"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="The device list updates automatically every second. If your VoCore is connected, it will appear with a âœ… checkmark. If offline or disconnected, it will show âŒ." FontWeight="Normal"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="The plugin automatically detects and configures:" FontWeight="SemiBold"/>
                                <LineBreak/>
                                <Run Text="  â€¢ Device connection status"/>
                                <LineBreak/>
                                <Run Text="  â€¢ Information Overlay activation"/>
                                <LineBreak/>
                                <Run Text="  â€¢ Dashboard configuration and merging"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="Use the " FontWeight="Normal"/>
                                <Run Text="Test" FontWeight="SemiBold"/>
                                <Run Text=" button to send a test message and verify everything is working correctly." FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- VR / Overlay Info -->
            <TextBlock Text="VR &amp; Overlay Support"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,20,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <Border Background="#2D2D30" Padding="15" CornerRadius="6" Margin="0,0,0,10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ¥½" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Using in VR or as Screen Overlay"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="A separate overlay dashboard 'Simhub WhatsApp Plugin Overlay' is automatically installed and available for use in VR headsets or as a screen overlay on your monitor."
                               Foreground="#CCCCCC"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="To use it:"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="1. Go to SimHub â†’ Dash Studio â†’ Overlay settings"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="2. Add 'Simhub WhatsApp Plugin Overlay' as an overlay"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,3"/>
                    <TextBlock Text="3. Configure position and size as needed"
                               Foreground="#CCCCCC"
                               FontSize="12"
                               Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
