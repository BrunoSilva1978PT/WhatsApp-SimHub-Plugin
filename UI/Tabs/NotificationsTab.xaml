<UserControl x:Class="WhatsAppSimHubPlugin.UI.Tabs.NotificationsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Notification Sounds -->
            <TextBlock Text="Notification Sounds"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,20">

                <!-- VIP Sound -->
                <styles:SHToggleCheckbox x:Name="VipSoundEnabledCheckbox"
                         Content="Enable VIP sounds"
                         FontSize="13"
                         Foreground="White"
                         Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="VipSoundComboBox" Grid.Column="0"
                              Height="28" VerticalContentAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                        <styles:SHButtonPrimary x:Name="VipSoundPlay" Content="Play" Width="50" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="VipSoundPlay_Click"/>
                        <styles:SHButtonPrimary x:Name="VipSoundImport" Content="Import" Width="60" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SoundImport_Click"/>
                        <styles:SHButtonPrimary x:Name="VipSoundDelete" Content="Delete" Width="55" Height="28" Padding="0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="VipSoundDelete_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Urgent Sound -->
                <styles:SHToggleCheckbox x:Name="UrgentSoundEnabledCheckbox"
                         Content="Enable Urgent sounds"
                         FontSize="13"
                         Foreground="White"
                         Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="UrgentSoundComboBox" Grid.Column="0"
                              Height="28" VerticalContentAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                        <styles:SHButtonPrimary x:Name="UrgentSoundPlay" Content="Play" Width="50" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="UrgentSoundPlay_Click"/>
                        <styles:SHButtonPrimary x:Name="UrgentSoundImport" Content="Import" Width="60" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SoundImport_Click"/>
                        <styles:SHButtonPrimary x:Name="UrgentSoundDelete" Content="Delete" Width="55" Height="28" Padding="0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="UrgentSoundDelete_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Normal Sound -->
                <styles:SHToggleCheckbox x:Name="NormalSoundEnabledCheckbox"
                         Content="Enable Normal sounds"
                         FontSize="13"
                         Foreground="White"
                         Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="NormalSoundComboBox" Grid.Column="0"
                              Height="28" VerticalContentAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                        <styles:SHButtonPrimary x:Name="NormalSoundPlay" Content="Play" Width="50" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="NormalSoundPlay_Click"/>
                        <styles:SHButtonPrimary x:Name="NormalSoundImport" Content="Import" Width="60" Height="28" Padding="0" Margin="0,0,4,0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SoundImport_Click"/>
                        <styles:SHButtonPrimary x:Name="NormalSoundDelete" Content="Delete" Width="55" Height="28" Padding="0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="NormalSoundDelete_Click"/>
                    </StackPanel>
                </Grid>

                <Border Background="#1E3A5F" Padding="12" CornerRadius="6" Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2139;&#xFE0F;" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Top" Foreground="White"/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="White"
                                   FontSize="12"
                                   LineHeight="18">
                            Enable sounds for each priority level individually.
                            <LineBreak/>
                            Sounds play only once per contact until the message is dismissed.
                            <LineBreak/>
                            Import your own .wav or .mp3 files.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Message Display Duration -->
            <TextBlock Text="Message Display Duration"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,20">

                    <!-- Normal duration -->
                    <TextBlock Text="Normal message duration:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="NormalDurationSlider" Grid.Column="0"
                                Minimum="5" Maximum="30" Value="5"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="NormalDurationValue" Grid.Column="1"
                                   Text="5s" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0">
                            <styles:SHButtonPrimary x:Name="NormalDurationPlus" Content="+" Width="28" Height="28" Padding="0" Margin="0,0,3,0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="NormalDurationPlus_Click"/>
                            <styles:SHButtonPrimary x:Name="NormalDurationMinus" Content="-" Width="28" Height="28" Padding="0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="NormalDurationMinus_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- VIP/Urgent duration -->
                    <TextBlock Text="VIP/Urgent message duration:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="UrgentDurationSlider" Grid.Column="0"
                                Minimum="10" Maximum="60" Value="10"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="UrgentDurationValue" Grid.Column="1"
                                   Text="10s" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0">
                            <styles:SHButtonPrimary x:Name="UrgentDurationPlus" Content="+" Width="28" Height="28" Padding="0" Margin="0,0,3,0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="UrgentDurationPlus_Click"/>
                            <styles:SHButtonPrimary x:Name="UrgentDurationMinus" Content="-" Width="28" Height="28" Padding="0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="UrgentDurationMinus_Click"/>
                        </StackPanel>
                    </Grid>

                <Border Background="#1E3A5F" Padding="12" CornerRadius="6" Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2139;&#xFE0F;" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Top" Foreground="White"/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="White"
                                   FontSize="12"
                                   LineHeight="18">
                            How long messages stay visible on screen.
                            <LineBreak/>
                            VIP/Urgent messages display for longer.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Queue Limits -->
            <TextBlock Text="Queue Limits"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,20">

                    <!-- Max messages per contact -->
                    <TextBlock Text="Max messages per contact:"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="MaxMessagesPerContactSlider" Grid.Column="0"
                                Minimum="1" Maximum="10" Value="5"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="MaxMessagesPerContactValue" Grid.Column="1"
                                   Text="5" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0">
                            <styles:SHButtonPrimary x:Name="MaxMessagesPerContactPlus" Content="+" Width="28" Height="28" Padding="0" Margin="0,0,3,0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MaxMessagesPerContactPlus_Click"/>
                            <styles:SHButtonPrimary x:Name="MaxMessagesPerContactMinus" Content="-" Width="28" Height="28" Padding="0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MaxMessagesPerContactMinus_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Max queue size -->
                    <TextBlock Text="Max queue size (non VIP/Urgent):"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="MaxQueueSizeSlider" Grid.Column="0"
                                Minimum="1" Maximum="50" Value="10"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="MaxQueueSizeValue" Grid.Column="1"
                                   Text="10" FontWeight="Bold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0">
                            <styles:SHButtonPrimary x:Name="MaxQueueSizePlus" Content="+" Width="28" Height="28" Padding="0" Margin="0,0,3,0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MaxQueueSizePlus_Click"/>
                            <styles:SHButtonPrimary x:Name="MaxQueueSizeMinus" Content="-" Width="28" Height="28" Padding="0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MaxQueueSizeMinus_Click"/>
                        </StackPanel>
                    </Grid>

                <Border Background="#1E3A5F"
                        Padding="12"
                        CornerRadius="6"
                        Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2139;&#xFE0F;" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Top" Foreground="White"/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="White"
                                   FontSize="12"
                                   LineHeight="18">
                            VIP/Urgent messages have no queue limit and always take priority.
                            <LineBreak/>
                            When the queue is full, oldest non-VIP/Urgent messages are removed first.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- VIP/Urgent Message Behavior -->
            <TextBlock Text="VIP/Urgent Message Behavior"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#00BCD4"
                       Margin="0,0,0,5"/>
            <Border Height="1" Background="#00BCD4" Margin="0,0,0,15"/>

            <StackPanel Margin="0,0,0,20">

                    <!-- Remove after first display -->
                    <styles:SHToggleCheckbox x:Name="RemoveAfterFirstDisplayCheckbox"
                             Content="Remove VIP/Urgent after first display"
                             FontSize="13"
                             Foreground="White"
                             Margin="0,0,0,15"/>

                    <!-- Repeat interval (only visible when RemoveAfterFirstDisplay is OFF) -->
                    <StackPanel x:Name="ReminderIntervalPanel" Margin="0,0,0,15">
                        <TextBlock Text="Repeat interval for VIP/Urgent messages:"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ReminderIntervalSlider" Grid.Column="0"
                                    Minimum="1" Maximum="10" Value="3"
                                    TickFrequency="1" IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"/>
                            <TextBlock x:Name="ReminderIntervalValue" Grid.Column="1"
                                       Text="3 min" FontWeight="Bold"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5,0,0,0">
                                <styles:SHButtonPrimary x:Name="ReminderIntervalPlus" Content="+" Width="28" Height="28" Padding="0" Margin="0,0,3,0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="ReminderIntervalPlus_Click"/>
                                <styles:SHButtonPrimary x:Name="ReminderIntervalMinus" Content="-" Width="28" Height="28" Padding="0" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="ReminderIntervalMinus_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                <Border Background="#1E3A5F"
                        Padding="12"
                        CornerRadius="6"
                        Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2139;&#xFE0F;" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Top" Foreground="White"/>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="White"
                                   FontSize="12"
                                   LineHeight="18">
                            VIP/Urgent messages can repeat until read.
                            <LineBreak/>
                            Enable "Remove after first display" to prevent repeats.
                            <LineBreak/>
                            When repeating, the interval defines how long to show normal queue between VIP/Urgent repeats.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
