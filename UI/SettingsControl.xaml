<UserControl x:Class="WhatsAppSimHubPlugin.UI.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
             xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins"
             xmlns:tabs="clr-namespace:WhatsAppSimHubPlugin.UI.Tabs"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">



    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Version and Update Info -->
        <Border Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Version Info (Right aligned) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Current Version -->
                    <TextBlock Text="Version:"
                               Foreground="#858585"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock x:Name="CurrentVersionText"
                               Text="1.0.0"
                               Foreground="#858585"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>

                    <!-- Update Available Arrow and New Version -->
                    <TextBlock x:Name="UpdateArrowText"
                               Text="â†’"
                               Foreground="#00BCD4"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"
                               Visibility="Collapsed"/>

                    <TextBlock x:Name="NewVersionText"
                               Text="1.1.0"
                               Foreground="#00BCD4"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Visibility="Collapsed"/>

                    <!-- Status Text (Up to date / available / Downloading / ready) -->
                    <TextBlock x:Name="UpdateStatusText"
                               Text="âœ“ Up to date"
                               Foreground="#0E7A0D"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <!-- Download/Install Button -->
                    <styles:SHButtonPrimary x:Name="UpdateButton"
                               Content="Download"
                               Background="#007ACC"
                               Foreground="White"
                               Padding="12,4"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Visibility="Collapsed"
                               ToolTip="Download new version"/>
                </StackPanel>
            </Grid>
        </Border>

        <styles:SHTabControl Grid.Row="1">
            <!-- TAB 1: CONNECTION -->
            <styles:SHTabItem Header="ðŸ”Œ Connection">
                <tabs:ConnectionTab x:Name="ConnectionTab"/>
            </styles:SHTabItem>

            <!-- TAB 2: CONTACTS -->
            <styles:SHTabItem Header="ðŸ‘¥ Contacts">
                <tabs:ContactsTab x:Name="ContactsTab"/>
            </styles:SHTabItem>

            <!-- TAB 3: KEYWORDS -->
            <styles:SHTabItem Header="ðŸš¨ Keywords">
                <tabs:KeywordsTab x:Name="KeywordsTab"/>
            </styles:SHTabItem>

            <!-- TAB 4: DISPLAY -->
            <styles:SHTabItem Header="ðŸ–¥ï¸ Display">
                <tabs:DisplayTab x:Name="DisplayTab"/>
            </styles:SHTabItem>

            <!-- TAB 5: NOTIFICATIONS -->
            <styles:SHTabItem Header="ðŸ”” Notifications">
                <tabs:NotificationsTab x:Name="NotificationsTab"/>
            </styles:SHTabItem>

            <!-- TAB 6: LED EFFECTS -->
            <styles:SHTabItem Header="LED Effects">
                <tabs:LedEffectsTab x:Name="LedEffectsTab"/>
            </styles:SHTabItem>

            <!-- TAB 7: QUICK REPLIES -->
            <styles:SHTabItem Header="âš¡ Quick Replies">
                <tabs:QuickRepliesTab x:Name="QuickRepliesTab"/>
            </styles:SHTabItem>
        </styles:SHTabControl>

        <!-- Toast Notification - Top right corner, aligned with tabs -->
        <Border Grid.Row="1" x:Name="ToastNotification"
                Background="#2D2D30"
                BorderBrush="#007ACC"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,37,400,0"
                Visibility="Collapsed"
                MinWidth="200"
                MaxWidth="400">
            <Border.Effect>
                <DropShadowEffect Color="#007ACC" Opacity="0.6" BlurRadius="15" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ToastIcon"
                           Text="â„¹ï¸"
                           FontSize="20"
                           Margin="0,0,10,0"
                           VerticalAlignment="Top"/>
                <TextBlock x:Name="ToastMessage"
                           Text="Notification"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"
                           MaxWidth="350"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
