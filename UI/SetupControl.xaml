<UserControl x:Class="WhatsAppSimHubPlugin.UI.SetupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            
            <!-- Header -->
            <TextBlock Text="Setting up WhatsApp Plugin..."
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <!-- Node.js Status -->
            <Border Background="#252526" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,0,10">
                <StackPanel>
                    <DockPanel>
                        <TextBlock x:Name="NodeStatusIcon" 
                                   Text="â³" 
                                   FontSize="20"
                                   Foreground="#007ACC"
                                   DockPanel.Dock="Left"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="Node.js" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock x:Name="NodeStatusText"
                               Text="Checking..."
                               FontSize="12"
                               Foreground="#858585"
                               Margin="30,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Git Status -->
            <Border Background="#252526" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,0,10">
                <StackPanel>
                    <DockPanel>
                        <TextBlock x:Name="GitStatusIcon" 
                                   Text="â³" 
                                   FontSize="20"
                                   Foreground="#007ACC"
                                   DockPanel.Dock="Left"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="Git" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock x:Name="GitStatusText"
                               Text="Waiting..."
                               FontSize="12"
                               Foreground="#858585"
                               Margin="30,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- npm packages Status -->
            <Border Background="#252526" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <DockPanel>
                        <TextBlock x:Name="NpmStatusIcon" 
                                   Text="â¸ï¸" 
                                   FontSize="20"
                                   Foreground="#858585"
                                   DockPanel.Dock="Left"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="npm packages" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                    <TextBlock x:Name="NpmStatusText"
                               Text="Waiting for Node.js and Git..."
                               FontSize="12"
                               Foreground="#858585"
                               Margin="30,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                         Height="8"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Foreground="#007ACC"
                         Background="#3E3E42"
                         BorderThickness="0"
                         Margin="0,0,0,15"/>
            
            <!-- Overall Status -->
            <TextBlock x:Name="OverallStatusText"
                       Text="Initializing..."
                       FontSize="13"
                       Foreground="#858585"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Retry Button (sÃ³ aparece em caso de erro) -->
            <Button x:Name="RetryButton"
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    Click="RetryButton_Click"
                    Cursor="Hand"
                    Padding="20,12,20,12">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#007ACC" Offset="0"/>
                                    <GradientStop Color="#005A9E" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#007ACC" 
                                                              Opacity="0.3" 
                                                              BlurRadius="10" 
                                                              ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#0098FF" Offset="0"/>
                                                        <GradientStop Color="#007ACC" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#0098FF" 
                                                                      Opacity="0.6" 
                                                                      BlurRadius="15" 
                                                                      ShadowDepth="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#005A9E" Offset="0"/>
                                                        <GradientStop Color="#004578" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" 
                               FontSize="18" 
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Retry Setup" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Continue Button (sÃ³ aparece quando setup completo) -->
            <Button x:Name="ContinueButton"
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    Click="ContinueButton_Click"
                    Cursor="Hand"
                    Padding="25,15,25,15"
                    Margin="0,10,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#0E7A0D" Offset="0"/>
                                    <GradientStop Color="#0A5A09" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#0E7A0D" 
                                                              Opacity="0.4" 
                                                              BlurRadius="12" 
                                                              ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#10A00E" Offset="0"/>
                                                        <GradientStop Color="#0E7A0D" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#10A00E" 
                                                                      Opacity="0.7" 
                                                                      BlurRadius="18" 
                                                                      ShadowDepth="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#0A5A09" Offset="0"/>
                                                        <GradientStop Color="#074007" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" 
                               FontSize="20" 
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Restart SimHub" 
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Grid>
    
</UserControl>
